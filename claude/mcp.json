{
  "mcpServers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "name": "context7"
    },
    "godoc-mcp": {
      "command": "go",
      "args": ["run", "github.com/mrjoshuak/godoc-mcp@latest"]
    },
    "bloom": {
      "type": "http",
      "url": "https://api.bloom.pw/api/mcp",
      "name": "bloom",
      "headers": {
        "Authorization": "Bearer ${BLOOM_MCP_TOKEN}"
      }
    }
  }
}